{
  "openapi": "3.0.0",
  "info": {
    "title": "Power Business Inteligence API Documentation",
    "description": "Power Business Inteligence API Documentation",
    "version": "1.0.0",
    "contact": {
      "email": "rgranvilla@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "description": "Create an user.",
      "post": {
        "tags": ["Users"],
        "summary": "Create an user",
        "description": "Create a new user.",
        "security": [{ "bearerAuth": [] }],
        "required": true,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "JohnDoe",
                  "email": "johndoe@mail.com",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "2cb40451-4ac3-4505-827a-b4143549c0c2",
                    "username": "JohnDoe",
                    "email": "johndoe@mail.com"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Token missing"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Username or email already exists!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sessions": {
      "description": "Authenticate user",
      "post": {
        "tags": ["Authenticate"],
        "summary": "Authenticate an user.",
        "description": "Authenticate an user.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "johndoe@mail.com",
                  "password": "123456"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "content": {
                        "application/json": {
                          "schema": {
                            "type": "object",
                            "properties": {
                              "username": {
                                "type": "string"
                              },
                              "email": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "example": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE2Njc3NTQyNTQsImV4cCI6MTY2Nzg0MDY1NCwic3ViIjoiNWVjM2M4YjAtMDc3My00ZWZiLTk2MDYtZjhjMmMxNGRkNDRiIn0.bS6pb621ULvUM0sPx2SZSZSSEDYnnSaPENPJONDIAgQ",
                    "user": {
                      "username": "johndoe",
                      "email": "johndoe@mail.com"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Email or password incorrect!"
                  }
                }
              }
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Email and password fields are required!"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
