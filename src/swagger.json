    "/categories": {
      "description": "Create a category.",
      "post": {
        "tags": ["Categories"],
        "summary": "Create a category",
        "description": "Create a new category.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "types": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "parent_title": {
                    "type": "string"
                  },
                  "indentation": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "icon_url": {
                    "type": "string"
                  },
                  "image_url": {
                    "type": "string"
                  },
                  "priority": {
                    "type": "integer",
                    "format": "int32"
                  }
                },
                "example": {
                  "title": "Category title sample",
                  "parent_title": "Category parent_title sample",
                  "indentation": 0,
                  "icon_url": "Category icon url",
                  "image_url": "Category image url",
                  "priority": 1
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists!"
          }
        }
      },
